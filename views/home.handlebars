<!--Homepage-->
<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1>
                <img class="svg" src="assets/images/newspaper.svg" alt="newspaper" /> New York Times Scraped
                <img class="svg" src="assets/images/newspaper.svg" alt="newspaper" /> </h1>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}} {{#each article}}
        <div class="panel panel-info">
            <div class="panel-heading">
                <h4>{{this.title}}</h4>
            </div>
            <div class="panel-body">
                <p> {{this.summary}}</p>
                <a href={{this.link}} target="_blank">{{this.link}}</a>
                <br>
                <br>
                <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
            </div>
        </div>
        {{/each}} {{else}}
        <div class="panel panel-danger">
            <div class="panel-body">
                <h4>There are no saved articles at this time.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>